import java.util.Scanner;
public class Main {
	
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		int c=sc.nextInt();
		int sum=0;
		if (c==1)
		{
			for(int i=1;i<=n;i++)
			{
				sum=sum+i;
			}
			System.out.println(sum);
		}
		else if (c==2)
			{
				int prod=1;
				for (int j=1; j<=n; j++)
				{
                  prod= prod*j;
				}
				System.out.println(prod);
				
			}
		else
			{
				System.out.print("-1");
			}
		

	}
}
