import java.util.Scanner;
public class Main {
	
	public static void main(String[] args) {
	Scanner sc=new Scanner(System.in);
		 int n=sc.nextInt();
		


	
	 
	 long binary = 0, pow = 1;
	 while(n>0){
	 	int lastDigit = n%2;
	 	binary+= lastDigit * pow;
	 	pow*= 10;
	 	n/= 2;
	 }
	 System.out.println(binary);


	// approach 2
	//int dec = sc.nextInt();
    //String binary = Integer.toBinaryString(dec);
    //System.out.println(binary);
	}
}
